@model IEnumerable<CourseProject.Domain.Contracts.ViewModels.RewardViewModel>


@foreach (var reward in Model)
{
    <a href="#" id="linkCard">
        <div class="card text-center" id="cardHover" style="margin-bottom: 30px;">
            <div class="card-body" style="height: 150px">
                <div class="row">
                    <div class="col-sm-6">
                        @reward.Title
                    </div>
                    <div class="col-sm-6">
                        @reward.Amount
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted">
                <div>
                    <div class="row justify-content-end">
                        <div class="col-1">
                            <a href="#" id="cardLink">Edit</a>
                        </div>
                        <div class="col-1">
                            <a href="#" id="cardLink">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </a>
}

<div id="viewReward"></div>