@model IEnumerable<CourseProject.Domain.Contracts.ViewModels.RewardViewModel>

@if (Model != null)
{
    <div class="row">
        @foreach (var reward in Model)
        {
            <div class="col-6">
                <div class="card" style="margin-bottom:26px;">
                    <div class="card-body">
                        <p style="font-size:22px;">Pledge $@reward.Amount</p>
                        <p style="font-weight:bolder; font-size: 18px;">@reward.Title</p>
                        <p style="font-weight:unset;margin-bottom:40px;">@reward.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
}