@model CourseProject.Domain.Contracts.ViewModels.PostViewModel



<h1 style="text-align:center;">@Model.Title</h1>

<h5 style="text-align:center; margin-bottom: 40px;">@Model.SubTitle</h5>

<div style="margin-bottom: 70px;">@Html.Raw(Model.Content)</div>



<div class="row justify-content-between">
    <div class="col-2">
        <a class="btn btn-info" asp-action="Get" asp-route-Id="@Model.ProjectId" style="width:100%;">Back to project</a>
    </div>
    <div class="col-2">
        <a class="btn btn-warning" asp-action="Update" asp-route-Id="@Model.Id" style="width:100%;">Update</a>
    </div>
    <div class="col-2">
        <a class="btn btn-danger" asp-action="Remove" asp-route-Id="@Model.Id" style="width:100%;">Remove</a>
    </div>
</div>


