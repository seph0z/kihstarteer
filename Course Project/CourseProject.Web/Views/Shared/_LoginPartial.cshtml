@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" style="margin-right: 10px;">
            <a class="btn btn-outline-dark" asp-controller="User" asp-action="GetProfile" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Context.Request.Path">
                <button type="submit" class="btn btn-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item" style="margin-right: 10px;">
            <a class="nav-link btn btn-dark text-white" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Context.Request.Path">Sign in</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-light text-dark" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Context.Request.Path">Sign up</a>
        </li>
    }
</ul>